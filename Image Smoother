class Solution:
    def imageSmoother(self, img: List[List[int]]) -> List[List[int]]:
        ans = [[0] * len(img[0]) for _ in range(len(img))] 
        #
        #
        # Approach:
        # Initialize ans matrix
        # Loop through each element
        # For each element, initialize sum_ and count vars
        # Usr if elses and add the surrounding boxes to sum_ and increment count
        # Then find the average, and append it to ans at i, j
        # Return ans at the end
        #
        #
        #
        #
        #
        # 8 checks per element 
        #
        #
        #
        #
        
        for i, row in enumerate(img):
            for j, item in enumerate(row):
                sum_ = 0
                count = 0

                for x in [i-1, i, i+1]:
                    for y in [j-1, j, j+1]:
                        if 0 <= x < len(img) and 0 <= y < len(img[0]):
                            sum_ += img[x][y]
                            count += 1

                ans[i][j] = sum_ // count

        return ans
                
            
