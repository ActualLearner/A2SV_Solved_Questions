class FrequencyTracker:

    def __init__(self):
        self.hashmap = {}
        self.freq = {}

    def add(self, number: int) -> None:
        self.hashmap[number] = self.hashmap.get(number, 0) + 1
        old_freq = self.hashmap[number] - 1
        new_freq = self.hashmap[number]

        # remove old_freq
        if old_freq > 0 and old_freq in self.freq:
            self.freq[old_freq].remove(number)
            
        # add new_freq
        if new_freq in self.freq:
            self.freq[new_freq].append(number)
        else:
            self.freq[new_freq] = [number]

    def deleteOne(self, number: int) -> None:
        if number in self.hashmap:
            self.hashmap[number] = self.hashmap.get(number, 0) - 1
            if self.hashmap[number] == 0:
                del self.hashmap[number]
                self.freq[1].remove(number)
            else:
                new_freq = self.hashmap[number]
                old_freq = new_freq + 1

                # remove old_freq
                if old_freq > 0 and old_freq in self.freq:
                    self.freq[old_freq].remove(number)
                    
                # add new_freq
                if new_freq in self.freq:
                    self.freq[new_freq].append(number)
                else:
                    self.freq[new_freq] = [number]

    def hasFrequency(self, frequency: int) -> bool:
        if frequency in self.freq and self.freq[frequency]:
            return True
        return False
        


# Your FrequencyTracker object will be instantiated and called as such:
# obj = FrequencyTracker()
# obj.add(number)
# obj.deleteOne(number)
# param_3 = obj.hasFrequency(frequency)
