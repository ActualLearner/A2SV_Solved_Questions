class Solution:
    def groupAnagrams(self, strs: List[str]) -> List[List[str]]:
        hashmap = {}

        for word in strs:
            letters = [0 for _ in range(26)]
            for c in word:
                index = ord('a') - ord(c)
                letters[index] += 1
            
            key = tuple(letters)
            if key in hashmap:
                hashmap[key].append(word)
            else:
                hashmap[key] = [word]
        
        return list(hashmap.values())
