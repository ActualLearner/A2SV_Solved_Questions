class Solution:
    def flipAndInvertImage(self, image: List[List[int]]) -> List[List[int]]:
        n = len(image)
        
        for row in image:
            for j in range((n + 1) // 2):
                if row[j] == row[n - j - 1]:
                    num = 1 - row[j]
                    row[j] = num
                    row[n - j - 1] = num
                
        return image
